# Slack App Configuration (for multi-workspace support)
SLACK_CLIENT_ID=your-slack-client-id-here
SLACK_CLIENT_SECRET=your-slack-client-secret-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# OAuth Redirect Configuration 
SLACK_REDIRECT_URI=https://your-app.onrender.com/oauth/callback

# Optional: For Socket Mode in development
SLACK_APP_TOKEN=xapp-your-app-token-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/punchbot

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=False
TIMEZONE=Asia/Taipei
DEFAULT_WORK_HOURS=8

# Auto Punch Configuration
AUTO_PUNCH_TIMEOUT_MINUTES=30
ENABLE_AUTO_PUNCH=True

# Reminder Configuration
ENABLE_DAILY_REMINDER=True
ENABLE_WORK_HOUR_REMINDER=True
ENABLE_FORGOT_PUNCH_REMINDER=True
ENABLE_WEEKLY_REPORT=True

# Reminder Timing Configuration
DAILY_REMINDER_HOUR=9
DAILY_REMINDER_MINUTE=0
FORGOT_PUNCH_REMINDER_HOUR=18
FORGOT_PUNCH_REMINDER_MINUTE=30
WEEKLY_REPORT_DAY=0
WEEKLY_REPORT_HOUR=9
WEEKLY_REPORT_MINUTE=30

# Work Hour Check Interval (minutes)
WORK_HOUR_CHECK_INTERVAL=15

# Slack Status Management
ENABLE_STATUS_UPDATE=True
ENABLE_DND_MANAGEMENT=False

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=csv,xlsx,pdf

# Report Configuration
DEFAULT_REPORT_LIMIT=1000
EXPORT_DATE_FORMAT=%Y-%m-%d
EXPORT_DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# Admin Configuration
DEFAULT_ADMIN_USERS=

# Cache Configuration (optional)
ENABLE_REDIS=False
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# API Configuration
API_VERSION=v1